<style>
    /* Search Button */
    .btn-search {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: #fff;
        border-radius: 12px;
        padding: 0.5rem 1.2rem;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        font-weight: 500;
        border: none;
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.2);
    }
    .btn-search:hover {
        background: linear-gradient(135deg, #059669 0%, #047857 100%);
        transform: translateY(-2px);
        color: #fff;
        box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
    }
    .btn-search i {
        margin-right: 0.5rem;
    }

    /* Search Input */
    .search-input {
        border-radius: 12px;
        text-align: center;
        padding: 0.5rem 1.2rem;
        width: 220px;
        border: 1px solid rgba(16, 185, 129, 0.15);
        background: linear-gradient(145deg, #ffffff, #f9fdfc);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        color: #4b5563;
    }
    .search-input:focus {
        border-color: #10b981;
        box-shadow: 
            0 0 0 3px rgba(16, 185, 129, 0.1),
            0 4px 15px rgba(16, 185, 129, 0.15);
        outline: none;
        background: #ffffff;
    }

    /* Navbar */
    .navbar {
        background: linear-gradient(145deg, #ffffff 0%, #f9fdfc 100%);
        padding: 0.8rem 1.5rem;
        box-shadow: 
            0 4px 20px rgba(16, 185, 129, 0.06),
            0 2px 10px rgba(0, 0, 0, 0.03);
        backdrop-filter: blur(15px);
        border-bottom: 1px solid rgba(16, 185, 129, 0.08);
    }

    .navbar-brand {
        font-size: 1.5rem;
        color: #10b981 !important;
        font-weight: 600;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .navbar-brand:hover {
        color: #059669 !important;
        transform: translateY(-1px);
    }
    .navbar-brand i {
        background: linear-gradient(135deg, #10b981, #34d399);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .navbar-nav .nav-link {
        margin-left: 1rem;
        font-weight: 500;
        color: #6b7280 !important;
        padding: 0.5rem 1rem !important;
        border-radius: 10px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .navbar-nav .nav-link:hover {
        color: #10b981 !important;
        background: linear-gradient(145deg, rgba(16, 185, 129, 0.05), rgba(52, 211, 153, 0.05));
        transform: translateY(-1px);
    }

    .navbar-nav .nav-link.text-danger {
        color: #dc2626 !important;
    }
    .navbar-nav .nav-link.text-danger:hover {
        color: #b91c1c !important;
        background: linear-gradient(145deg, rgba(220, 38, 38, 0.05), rgba(185, 28, 28, 0.05));
    }

    .navbar-toggler {
        border: 1px solid rgba(16, 185, 129, 0.2);
        border-radius: 8px;
        padding: 0.4rem 0.6rem;
        background: linear-gradient(145deg, #ffffff, #f9fdfc);
        transition: all 0.3s ease;
    }
    .navbar-toggler:hover {
        border-color: #10b981;
        background: linear-gradient(145deg, rgba(16, 185, 129, 0.05), rgba(52, 211, 153, 0.05));
    }
    .navbar-toggler:focus {
        box-shadow: 0 0 0 2px rgba(16, 185, 129, 0.2);
    }
    .navbar-toggler-icon {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='%2310b981' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='m4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }

    /* Dropdown on small screens */
    @media (max-width: 768px) {
        .navbar-collapse {
            background: linear-gradient(145deg, #ffffff 0%, #f9fdfc 100%);
            padding: 1.5rem;
            border-radius: 15px;
            margin-top: 1rem;
            box-shadow: 
                0 10px 40px rgba(16, 185, 129, 0.1),
                0 4px 15px rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(16, 185, 129, 0.08);
            backdrop-filter: blur(10px);
        }
        .search-input {
            width: 100%;
            margin-bottom: 0.5rem;
        }
        .btn-search {
            width: 100%;
        }
    }
</style>
</head>


<nav class="navbar navbar-expand-md sticky-top border-bottom">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <i class="fa-regular fa-compass"></i> Velora
    </a>

    <button class="navbar-toggler" 
      type="button" 
      data-bs-toggle="collapse" 
      data-bs-target="#navbarNavAltMarkup" 
      aria-controls="navbarNavAltMarkup" 
      aria-expanded="false" 
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Add Listing</a>
        <% if (!currUser){ %>
        <a class="nav-link" href="/signup"><b>Signup</b></a>
        <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %>
        <% if (currUser){ %>
        <a class="nav-link text-danger" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
