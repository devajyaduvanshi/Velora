<% layout("/layout/boilerplate.ejs") %>

<style>
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem;
    margin-left: auto;       /* push it to the right */
    background: #fff;
  }

  .filter {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  /* Small screens */
  @media (max-width: 576px) {
    .tax-toggle {
      margin-left: 0;
      margin-top: 0.5rem;
      width: 100%;
      text-align: center;
      height: auto;
      padding: 0.8rem;

      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .form-check-reverse {
      flex-direction: column;
    }

    .form-check-label {
      margin-bottom: 0.5rem;
      text-align: center;
      width: 100%;
    }
  }
</style>

<% if (allListings.length>0) {%>
<div class="filter">
  <!-- Optional Title (uncomment if needed) -->
  <!-- <h3 style="margin: 0;">All Listings</h3> -->

  <!-- Toggle on right -->
  <div class="tax-toggle mt-3">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display Price after taxes</label>
    </div>
  </div>
</div>
<% } %>


<div class="row row-cols-lg-3 row-cols-md-2 mt-3 row-cols-sm-1">
  <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height:20rem;" />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br />
            &#8377; 
            <span class="price" data-original="<%= listing.price %>">
              <%= listing.price.toLocaleString("en-IN") %>
            </span> / day
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");

  taxSwitch.addEventListener("change", () => {
    let prices = document.getElementsByClassName("price");

    for (let i = 0; i < prices.length; i++) {
      let originalPrice = parseFloat(prices[i].getAttribute("data-original"));

      if (taxSwitch.checked) {
        let withTax = originalPrice * 1.18; // add 18%
        prices[i].innerText = withTax.toLocaleString("en-IN");
      } else {
        prices[i].innerText = originalPrice.toLocaleString("en-IN");
      }
    }
  });
</script>
