<% layout("/layout/boilerplate.ejs") %>

<div class="d-flex justify-content-center align-items-center bg-light py-5">
  <div class="card shadow-lg p-4" style="width: 28rem; border-radius: 1rem;">
    <!-- Heading -->
    <h2 class="text-center mb-4 text-success fw-bold">Login to Velora</h2>

    <!-- Form -->
    <form action="/login" method="POST" class="needs-validation" novalidate>
      
      <!-- Username -->
      <div class="mb-3">
        <label for="username" class="form-label fw-semibold">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          placeholder="Enter your username"
          required
        >
      </div>

      <!-- Password -->
      <div class="mb-4">
        <label for="password" class="form-label fw-semibold">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          placeholder="Enter your password"
          required
        >
      </div>

      <!-- Submit -->
      <button class="btn btn-success w-100 fw-semibold">Login</button>

      <!-- Extra Links -->
      <div class="text-center mt-3">
        <small class="text-muted">
          Donâ€™t have an account? 
          <a href="/signup" class="text-success fw-semibold">Sign up</a>
        </small>
      </div>
    </form>
  </div>
</div>
